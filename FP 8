
```yaml name=private-economy/k8s/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: credits-service
spec:
  replicas: 2
  selector:
    matchLabels:
      app: credits
  template:
    metadata:
      labels:
        app: credits
    spec:
      containers:
      - name: credits
        image: gcr.io/<PROJECT>/credits-service:latest
        ports:
        - containerPort: 4000
        env:
        - name: DATABASE_URL
          valueFrom:
            secretKeyRef:
              name: db-secret
              key: DATABASE_URL
        - name: JWT_SECRET
          valueFrom:
            secretKeyRef:
              name: service-secret
              key: JWT_SECRET
---
apiVersion: v1
kind: Service
metadata:
  name: credits-svc
spec:
  selector:
    app: credits
  ports:
  - port: 4000
    targetPort: 4000
  type: ClusterIP
