FROM rust:1.70-slim AS build
WORKDIR /app
RUN apt-get update && apt-get install -y pkg-config libssl-dev && rm -rf /var/lib/apt/lists/*
COPY services/exchange-engine /app/services/exchange-engine
WORKDIR /app/services/exchange-engine
RUN cargo build --release

FROM gcr.io/distroless/cc-debian12
WORKDIR /srv
ENV PORT=8093
COPY --from=build /app/services/exchange-engine/target/release/exchange-engine /usr/local/bin/exchange-engine
USER 65532:65532
EXPOSE 8093
ENTRYPOINT ["/usr/local/bin/exchange-engine"]
