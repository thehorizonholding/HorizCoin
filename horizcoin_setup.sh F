#!/usr/bin/env bash

echo "Installing HorizCoin dependencies..."

# Python dependencies
pip install --upgrade pip
pip install gymnasium stable-baselines3 torch numpy eth-account web3 requests base64 uuid

# Solidity / Hardhat (if you want to deploy contracts)
npm install -g hardhat @openzeppelin/contracts

# Optional: iperf3 for PoB
if ! command -v iperf3 &> /dev/null; then
    echo "Installing iperf3..."
    if [[ "$OSTYPE" == "linux-gnu"* ]]; then
        sudo apt update && sudo apt install -y iperf3
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        brew install iperf3
    else
        echo "Please install iperf3 manually: https://iperf.fr/iperf-download.php"
    fi
fi

echo "Setup complete. Run 'python horizcoin_core.py --enforce-target --simulation' to start."
