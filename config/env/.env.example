# HorizCoin Environment Configuration
# Copy this file to .env and configure for your deployment

# Network Configuration
MAINNET_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_API_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# API Keys for verification
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY

# Deployment Configuration
DEPLOYER_PRIVATE_KEY=0x...  # Private key for deployment (use hardware wallet for mainnet)
MULTISIG_ADDRESS=0x...      # Multisig address for admin roles
TREASURY_ADDRESS=0x...      # Treasury address for initial token mint

# Optional Module Deployment
DEPLOY_OPTIONAL_MODULES=false  # Set to true to deploy PauseModule and RateLimitedAdapter

# Governance Parameters (production values)
VOTING_DELAY_BLOCKS=7200       # ~1 day in blocks
VOTING_PERIOD_BLOCKS=50400     # ~7 days in blocks  
QUORUM_FRACTION_BPS=400        # 4% quorum
PROPOSAL_THRESHOLD_BPS=0       # 0% initially
TIMELOCK_DELAY_SECONDS=172800  # 2 days

# Treasury Configuration
MAX_EMISSION_RATE=1000000000000000000000  # 1000 tokens per block maximum

# Security Configuration
SECURITY_CONTACT=security@horizcoin.org
EMERGENCY_MULTISIG=0x...       # Emergency response multisig

# Monitoring Configuration
MONITORING_WEBHOOK_URL=https://...  # Webhook for monitoring alerts
ALERT_EMAIL=alerts@horizcoin.org

# Documentation
DOCS_IPFS_HASH=QmYourIPFSHashHere
METADATA_IPFS_HASH=QmYourMetadataHashHere

# Development/Testing
FORK_BLOCK_NUMBER=19000000     # Block number for forking mainnet
TEST_PRIVATE_KEY=0x...         # Private key for testing (never use for mainnet)

# Gas Configuration
GAS_PRICE_GWEI=20              # Gas price in gwei
GAS_LIMIT=8000000              # Gas limit for transactions

# Network-specific settings
# Mainnet
MAINNET_DEPLOYER=0x...
MAINNET_MULTISIG=0x...
MAINNET_TREASURY=0x...

# Sepolia (testnet)
SEPOLIA_DEPLOYER=0x...
SEPOLIA_MULTISIG=0x...
SEPOLIA_TREASURY=0x...

# Local development
LOCAL_DEPLOYER=0x...
LOCAL_MULTISIG=0x...
LOCAL_TREASURY=0x...