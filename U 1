name: Publish Docker images to GHCR

on:
  push:
    branches: [ main ]
    tags: [ 'v*', 'v*.*', 'v*.*.*' ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  packages: write
  id-token: write

env:
  REGISTRY: ghcr.io
  IMAGE_PREFIX: ${{ github.repository_owner }}/horizcoin

jobs:
  build-and-push:
    name: Build and Publish (${{ matrix.name }})
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        include:
          # Root server (if present from PR #41). Skipped automatically if Dockerfile is missing.
          - name: server
            context: .
            dockerfile: Dockerfile
            image: server
            port: 8080
          # Independently maintained services
          - name: pricing-api
            context: .
            dockerfile: services/pricing-api/Dockerfile
            image: pricing-api
            port: 8081
          - name: coingecko-api
            context: .
            dockerfile: services/coingecko-api/Dockerfile
            image: coingecko-api
            port: 8082
          - name: ledger
            context: .
            dockerfile: services/ledger/Dockerfile
            image: ledger
            port: 8090
          - name: payments-gateway
            context: .
            dockerfile: services/payments-gateway/Dockerfile
            image: payments-gateway
            port: 8091
          - name: swift-adapter
            context: .
            dockerfile: services/swift-adapter/Dockerfile
            image: swift-adapter
            port: 8092
          - name: exchange-engine
            context: .
            dockerfile: services/exchange-engine/Dockerfile
            image: exchange-engine
            port: 8093

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Check Dockerfile exists (skip if missing)
        id: check
        shell: bash
        run: |
          if [ ! -f "${{ matrix.dockerfile }}" ]; then
            echo "Dockerfile not found: ${{ matrix.dockerfile }}"
            echo "skip=true" >> "$GITHUB_OUTPUT"
          else
            echo "skip=false" >> "$GITHUB_OUTPUT"
          fi

      - name: Set up QEMU
        if: steps.check.outputs.skip != 'true'
        uses: docker/setup-qemu-action@v3

      - name: Set up Docker Buildx
        if: steps.check.outputs.skip != 'true'
        uses: docker/setup-buildx-action@v3

      - name: Log in to GHCR
        if: steps.check.outputs.skip != 'true' && github.event_name != 'pull_request'
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Docker metadata (tags/labels)
        if: steps.check.outputs.skip != 'true'
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_PREFIX }}-${{ matrix.image }}
          tags: |
            type=raw,value=edge,enable=${{ github.ref == 'refs/heads/main' }}
            type=raw,value=sha-${{ github.sha }},enable=${{ github.ref == 'refs/heads/main' }}
            type=ref,event=tag
            type=raw,value=pr-${{ github.event.number }},enable=${{ github.event_name == 'pull_request' }}

      - name: Build and push (multi-arch)
        if: steps.check.outputs.skip != 'true'
        id: build
        uses: docker/build-push-action@v6
        with:
          context: ${{ matrix.context }}
          file: ${{ matrix.dockerfile }}
          push: ${{ github.event_name != 'pull_request' }}
          platforms: linux/amd64,linux/arm64
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
          provenance: true
          sbom: true
          build-args: |
            PORT=${{ matrix.port }}

      - name: Install Cosign
        if: steps.check.outputs.skip != 'true' && github.event_name != 'pull_request' && startsWith(github.ref, 'refs/tags/')
        uses: sigstore/cosign-installer@v3

      - name: Sign image with Cosign (keyless OIDC)
        if: steps.check.outputs.skip != 'true' && github.event_name != 'pull_request' && startsWith(github.ref, 'refs/tags/')
        env:
          COSIGN_EXPERIMENTAL: "true"
          IMAGE: ${{ env.REGISTRY }}/${{ env.IMAGE_PREFIX }}-${{ matrix.image }}@${{ steps.build.outputs.digest }}
        run: cosign sign --yes "$IMAGE"
